<h2>Categories</h2>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Items</th>
  </tr>
  </thead>
  <tbody>
  {% for category in categories %}
    <tr>
      <td><a href="{{ category.url }}">{{ category.name }}</a></td>
      <td>{{ count(category.items) }}</td>
    </tr>
  {% else %}
    <tr><td colspan="2">No categories found</td></tr>
  {% endfor %}
  </tbody>
</table>
